{ 
  "version": 1,
  "formatters": { 
    "standard": { 
      "format": "%(asctime)s %(levelname)-8s %(message)s"
    }
  },
  "handlers": { 
    "console": {
      "level": "DEBUG",
      "formatter": "standard",
      "class": "logging.StreamHandler",
      "stream": "ext://sys.stdout"
    },
    "rotation": { 
      "level": "DEBUG",
      "formatter": "standard",
      "dateformat": "%m-%d-%Y %H:%M:%S",
      "class": "logging.handlers.RotatingFileHandler",
      "maxBytes": 20000000,
    }
  },
  "loggers": { 
    "": {
      "handlers": ["default"],
      "level": "WARNING",
      "propagate": false
    },
    "__main__": {
      "handlers": ["default"],
      "level": "DEBUG",
      "propagate": false
    }
  } 
}